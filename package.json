{
  "name": "@loremlabs/fairpass-component",
  "version": "0.0.0",
  "browser": true,
  "type": "module",
  "files": [
    "dist/**",
    "!dist/.elements/**"
  ],
  "scripts": {
    "build": "NODE_ENV=production pnpm build:all",
    "build:debug": "NODE_ENV=development pnpm build:all",
    "serve": "npx serve -n dist",
    "build:watch": "nodemon -V -e svelte,js,ts,css --watch src --exec \"pnpm build:all\"",
    "build:all": "dotenv pnpm build:components && pnpm build:elements-base && pnpm build:elements",
    "build:components": "TAILWIND_MODE=build node scripts/build-components.cjs",
    "build:elements-base": "TAILWIND_MODE=build node scripts/build-elements-base.cjs",
    "build:elements": "rollup -c scripts/elements.rollup.config.cjs",
    "build:clean": "rimraf dist",
    "build:copy": "rimraf ../../static/dist && mkdir -p ../../static/dist && cp -r dist ../../static",
    "lint": "prettier -c .",
    "lint:fix": "prettier -w .",
    "release": "np",
    "test": "echo nyet && exit 0"
  },
  "main": "dist/fair-pass.js",
  "module": "dist/fair-pass.js",
  "repository": "https://github.com/LoremLabs/fairpass-component",
  "author": {
    "name": "Lorem Labs",
    "email": "matt@fairpass.co"
  },
  "homepage": "https://www.fairpass.co",
  "license": "see LICENSE",
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@loremlabs/monetization-capability-api": "^0.0.4",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.3",
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.12",
    "@tailwindcss/forms": "^0.3.3",
    "@tailwindcss/line-clamp": "^0.2.1",
    "@types/tailwindcss": "^2.2.1",
    "@types/throttle-debounce": "^2.1.0",
    "autoprefixer": "^10.3.1",
    "babel-loader": "^8.2.2",
    "cssnano": "^5.0.6",
    "nodemon": "^2.0.20",
    "np": "^7.6.2",
    "postcss": "^8.3.5",
    "postcss-import": "^14.0.2",
    "postcss-load-config": "^3.1.0",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.3.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.53.1",
    "rollup-plugin-import-css": "^3.0.0",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.38.3",
    "svelte-dnd-action": "^0.9.9",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.7.4",
    "tailwindcss": "^2.2.4",
    "throttle-debounce": "^3.0.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.2"
  }
}
